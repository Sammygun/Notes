<VirtualHost *:80>
	ServerAdmin webmaster@localhost 
	DocumentRoot /var/www/code/wordpress ### указал корень документа

	ErrorLog ${APACHE_LOG_DIR}/error.log
	CustomLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost>

2 sudo a2ensite newproject.conf
